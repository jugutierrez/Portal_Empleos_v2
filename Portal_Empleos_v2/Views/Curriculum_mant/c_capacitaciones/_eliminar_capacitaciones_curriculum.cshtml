

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form name="mainForm" data-ng-submit="eliminar_capacitacion()" data-ng-controller="data1" ng-model="elimina_capacitacion" novalidate>
            <div class="text-center well">
                <h1 class="text-center">Eliminar Capacitacion </h1>
                <ul class="list-group">
                    <li class="list-group-item">
                        <h3>Desea eliminar esta Capacitacion:</h3>
                    </li>
                    <li class="list-group-item">
                        <h2>
                            @Html.Hidden("id_capacitaciones_curriculum", (Int32)ViewBag.id_capacitacion, new { @ng_model = "elimina_capacitacion.id", ng_init = "elimina_capacitacion.id = " + (Int32)ViewBag.id_capacitacion })
                            <span class="label label-danger">@ViewBag.nombre_capacitacion</span>
                        </h2>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-block btn-danger btn-lg">Eliminar</button>


                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group ">
                                    <div ng-controller="data1">

                                        <a href="" class="btn  btn-block btn-info btn-lg" ng-click="cerrarmodal()">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            </form>
</div>
</div>
